<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProyectoInvest_MAUI.Views.LoginPage"
             Title="LoginPage"
             BindingContext="{Binding Source={x:Reference Name=Views.LoginPage}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">
            <!-- Título -->
            <Label Text="Iniciar sesión"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#4C4C4C" />

            <!-- Imagen de logo (opcional) -->
            <Image Source="logo.png" 
                   HeightRequest="150"
                   HorizontalOptions="Center" />

            <!-- Campo de correo -->
            <Frame BackgroundColor="White" BorderColor="#E0E0E0" CornerRadius="10" Padding="10" HasShadow="True">
                <Entry Text="{Binding Email}"
                       Placeholder="Correo electrónico"
                       Keyboard="Email"
                       TextColor="Black"
                       BackgroundColor="Transparent" />
            </Frame>

            <!-- Campo de contraseña -->
            <Frame BackgroundColor="White" BorderColor="#E0E0E0" CornerRadius="10" Padding="10" HasShadow="True">
                <Entry Text="{Binding Password}"
                       Placeholder="Contraseña"
                       IsPassword="True"
                       TextColor="Black"
                       BackgroundColor="Transparent" />
            </Frame>

            <!-- Botón de inicio de sesión -->
            <Button Text="Iniciar sesión"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="15"
                    Command="{Binding LoginCommand}" />

            <!-- Mensaje de error -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>